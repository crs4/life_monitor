{% extends 'auth/base.j2' %}
{% import 'auth/macros.j2' as macros %}
{% block body_class %} login-page {% endblock %}
{% block body_style %}
  {% if current_user.is_authenticated %}
  height: auto;
  {% endif %}
  padding: 40px;
{% endblock %}


{% block body %}

{% if current_user.is_authenticated %}

  {{ macros.render_logo(style="max-width: 300px;", class="img-fluid logo text-center m-5") }}

   <!-- Main content -->
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-3">

            <!-- Profile Image -->
            <div class="card card-primary card-outline">
              <div class="card-body box-profile">
                <div class="text-center">
                  <img class="profile-user-img img-fluid img-circle"
                       src="{{ current_user.picture or url_for('auth.static', filename='img/avatar/default-user-avatar.jpg') }}"
                       alt="User profile picture">
                </div>

                <h3 class="profile-username text-center">{{ current_user.username }}</h3>

                <p class="text-muted text-center">(id. {{ current_user.id }})</p>

                <div class="list-group list-group-unbordered mb-3 text-center">
                  You{% if not current_user.has_password %} do not{% endif %} have a password set for your account.
                  {% if not current_user.has_password %}
                    <a href="{{ url_for("auth.set_password") }}">Set a password</a>
                  {% endif %}
                  {% if current_user.has_password %}
                    <a href="{{ url_for("auth.set_password") }}">Change a password</a>
                  {% endif %}
                </div>

                <ul class="list-group list-group-unbordered mb-3">
                  <li class="list-group-item">
                    <b>Accounts</b> <a class="float-right">{{ current_user.oauth_identity|length }}</a>
                  </li>
                  <li class="list-group-item">
                    <b>API Keys</b> <a class="float-right">{{ current_user.api_keys|length }}</a>
                  </li>
                  <li class="list-group-item">
                    <b>OAuth Apps</b> <a class="float-right">{{ current_user.clients|length }}</a>
                  </li>
                  <li class="list-group-item">
                    <b>Workflows</b> <a class="float-right">{{ current_user.workflows|length }}</a>
                  </li>
                </ul>

                <a href="{{ url_for("auth.logout") }}" class="btn btn-primary btn-block">
                   <b>Log out</b>
                </a>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
          <div class="col-md-9">
            <div class="card">
              <div class="card-header p-2">
                <ul class="nav nav-pills">
                  <li class="nav-item"><a class="nav-link active" href="#accounts" data-toggle="tab">Accounts</a></li>
                  <li class="nav-item"><a class="nav-link" href="#apikeys" data-toggle="tab">API Keys</a></li>
                </ul>
              </div><!-- /.card-header -->
              <div class="card-body">
                <div class="tab-content">
                  <div class="active tab-pane" id="accounts">

                    {# <div class="m-2 p-2">
                      External accounts connected to Life Monitor.
                    </div> #}

                    <div class="card-header">
                      <h3 class="card-title"><b>Connected accounts</b></h3>
                    </div>

                    <div class="card-body p-0">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th style="width: 5px"></th>
                            <th>Provider</th>
                            <th style="width: 5px">ID</th>
                            <th style="width: 40px"></th>
                          </tr>
                        </thead>
                        <tbody>
                        {% for p in providers %}
                          <tr>
                            <td>{{ macros.render_provider_fa_icon(p, color="black") }}</td>
                            <td>{{p.name.capitalize()}}</td>
                            <td>{% if p.name in current_user.oauth_identity %}
                              {{ current_user.oauth_identity[p.name].provider_user_id }}
                              {% endif %}</td>
                            {% if p.name in current_user.oauth_identity %}
                            <td><span class="badge bg-success">CONNECTED</span></td>
                            {% else %}
                            <td>
                              <span class="badge bg-primary">
                                <a class="" href="/oauth2/login/{{p.name}}">CONNECT</a>
                              </span>
                            </td>
                            {% endif %}
                          </tr>
                        {% endfor %}
                        </tbody>
                      </table>
                    </div>
                  </div>
                  <!-- /.tab-pane -->
                  <div class="tab-pane" id="apikeys">
                    <!-- The timeline -->
                    <div class="" style="margin-top: 20px;">

                      <div class="m-2 p-2">
                        Allow a user to interact with the LifeMonitor API.
                        An API key acts as a static authentication token and can be generated via the LifeMonitor
                        user interface after logging in. This authentication method can be used to quickly
                        try API calls via the API docs interface or tools like <span class="text-monospace">curl</span>.
                      </div>

                      <div class="card-header">
                        <h3 class="card-title"><b>API keys</b></h3>
                      </div>

                      <div class="card-body p-0">
                        <table class="table table-striped">
                          <thead>
                            <tr>
                              <th style="width: 10px">#</th>
                              <th>Key</th>
                              <th style="width: 10px"></th>
                              <th style="width: 44px">
                              <form method="POST"
                                      action="{{ url_for('auth.create_apikey') }}">
                                <button class="btn btn-link" type="submit" style="padding: 0">
                                    <span class="badge bg-primary">NEW</span>
                                </button>
                              </form>
                              </th>
                            </tr>
                          </thead>
                          <tbody>
                            {% for k in current_user.api_keys %}
                            <tr class="apikey-container">
                              <td>{{loop.index}}</td>
                              <td id="apikey_{{loop.index}}" class="apikey text-sm-left">{{k.key}}</td>
                              <td><span class="fas fa-eye text-center" onclick="clickApiKey(this)"></span></td>
                              <td>
                                <form method="POST"
                                      action="{{ url_for('auth.delete_apikey') }}">
                                  <input type="hidden" name="apikey" value="{{k.key}}" />
                                  <button class="btn btn-link" type="submit" style="padding: 0">
                                    <span class="badge bg-danger">
                                    DELETE
                                    </span>
                                  </button>
                                </form>
                              </td>
                            </tr>
                            {% endfor %}
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>

    </div>
  </div>
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    <!-- /.content -->

{% else %}
  {{ macros.render_logo(style="width: 50%") }}
  <div style="padding: 50px;">
  <a class="btn btn-primary btn-lg" role="button" href="{{ url_for('auth.login') }}">Log in</a>
  </div>
{% endif %}
</div>


<script>
window.addEventListener("load", function(){
    var apiKeys = document.getElementsByClassName("apikey-container");
    for (let i=0; i<apiKeys.length; i++){
      let apiKey = apiKeys[i];
      let keyEl = apiKey.getElementsByClassName("apikey")[0];
      keyEl.value = keyEl.innerText;
      keyEl.showValue = false;
      keyEl.innerText = "•".repeat(keyEl.value.length * 1.6);
    }
});

function clickApiKey(el){
  if (typeof el == 'undefined') return;
  let parent = el.parentElement.parentElement;
  let keyEl = parent.getElementsByClassName("apikey")[0];
  if (!keyEl.showValue){
    keyEl.innerText = keyEl.value;
    el.classList.remove("fa-eye");
    el.classList.add("fa-eye-slash");
    keyEl.showValue = true;
  }else{
    keyEl.innerText = "•".repeat(keyEl.value.length * 1.6);
    el.classList.remove("fa-eye-slash");
    el.classList.add("fa-eye");
    keyEl.showValue = false;
  }
}
</script>

{% endblock %}
